    "version": "0.2.0",
    "configurations": [
        {
            "name": "Color Wipe",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "--bin=otium",
                ],
                "filter": {
                    "name": "otium",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "otium=info"
            },
            "args": [
                "shaders/color-wipe.frag",
                "-w",
                "1024",
                "-h",
                "1024",
                "-u",
                "shaders/wipe-uniforms.json"
            ],
        }
    ]
}